enum Permission {
	ADMIN
	USER
	PETCREATE
	PETUPDATE
	PETDELETE
	PERMISSIONUPDATE
}

type User {
	id: ID! @unique
	name: String!
	email: String! @unique
	password: String
	permissions: [Permission]
	myPoliticians: [Politician] @relation(name: "UserFollowPolitician")
	myBills: [Bill] @relation(name: "UserFollowBill")
	upvotedBills: [Bill] @relation(name: "UpvoteBill")
	downvotedBills: [Bill] @relation(name: "DownvoteBill")
}

type Politician {
	id: ID! @unique
	party: String
	name: String! @unique
	title: String
	chamber: String
	state: String
	district: Int
	nthCongress: String
	phone: String
	gender: String
	image: String
	largeImage: String
	website: String
	govUrl: String
	createdAt: DateTime!
	updatedAt: DateTime!
	followedBy: User @relation(name: "UserFollowPolitician")
	bills: [Bill] @relation(name: "BillSponsorPolitician")
	coBills: [Bill] @relation(name: "BillCoSponsorPolitician")
}

type Bill {
	id: ID! @unique
	code: String
	title: String
	summary: String
	congressNumber: String
	chamber: String
	committees: String
	link: String
	sponsor: String
	coSponsors: [Politician] @relation(name: "BillCoSponsorPolitician")
	followedBy: [User] @relation(name: "UserFollowBill")
	upvotes: [User] @relation(name: "UpvoteBill") @default(value: 0)
	downvotes: [User] @relation(name: "DownvoteBill") @default(value: 0)
}
